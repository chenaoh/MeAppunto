<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        card_view:cardBackgroundColor="@color/colorFondo1"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorFondo2"
            android:layout_margin="1dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">


                <TextView
                    android:id="@+id/etiNecesidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Imagen Corporativa"
                    android:layout_marginBottom="10dp"
                    android:textSize="18sp"
                    android:textColor="@color/colorTitulo"/>

                <TextView
                    android:id="@+id/etiPostulados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="2 Postulados"
                    android:textSize="16sp"
                    android:textColor="@color/colorFondo1"
                    android:layout_below="@id/etiNecesidad"/>

                <TextView
                    android:id="@+id/etiDetalles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detalles"
                    android:textSize="16sp"
                    android:textColor="@color/colorTitulo"
                    android:layout_marginRight="13dp"
                    android:layout_marginEnd="13dp"
                    android:layout_alignBaseline="@+id/etiPostulados"
                    android:layout_alignBottom="@+id/etiPostulados"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>